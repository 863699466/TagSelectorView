<?xml version="1.0" encoding="utf-8"?>
<com.rock.android.tagselector.views.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="6dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tagNameTv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="4dp"
        tools:text="标签" />

    <RadioButton
        android:id="@+id/selectRB"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:button="@drawable/selector_item_select"
        android:checked="false"
        android:clickable="false"
        android:focusable="false" />

</com.rock.android.tagselector.views.CheckableLinearLayout>